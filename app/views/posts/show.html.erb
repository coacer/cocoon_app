<p id="notice"><%= notice %></p>

<p>
<strong>Title:</strong>
<%= @post.title %>
</p>

<p>
<strong>Body:</strong>
<%= @post.body %>
</p>

<div class="tag">
  <% @tags.each do |tag| %>
    <p>
    <strong>Tag:</strong>
    <%= tag.content %>
    </p>
    <% tag.descriptions.each do |description| %>
    <p class="description">
      <strong>Description:</strong>
      <%= description.content %>
    </p>
    <% end %>
  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
