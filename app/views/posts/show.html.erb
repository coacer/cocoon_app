<p id="notice"><%= notice %></p>

<p>
<strong>Title:</strong>
<%= @post.title %>
</p>

<p>
<strong>Body:</strong>
<%= @post.body %>
</p>

<% if @tags.count > 0 %>
  <p>
  <strong>Tag:</strong>
  <% @tags.each do |tag| %>
    <%= tag.content %>
  <% end %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
